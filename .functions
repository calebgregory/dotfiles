#!/bin/bash

docker-compose-restart() { docker-compose stop "$1"; docker-compose start "$1"; }
gu() {
  BRANCH="$(git branch --show-current)"
  git pull origin "$BRANCH"
}

todo() {
  item="$1"

  if [ -z $item ]; then
    read item
  fi

  echo "$item" >> ~/Desktop/todos/todos
}

todos() {
  vi ~/Desktop/todos/todos
}
